#!/bin/sh -eu

arrow() {
  echo '----->' "$@"
}

indent() {
  sed -u 's/^/       /'
}

BUILD_DIR=${1:-}
#CACHE_DIR=${2:-}
#ENV_DIR=${3:-}

arrow 'Setting up .profile.d to automatically run sidekiqmon agent...'
mkdir -p "${BUILD_DIR}/.profile.d"
cp .profile.d/heroku-sidekiqmon-daemon.sh "${BUILD_DIR}/.profile.d"
